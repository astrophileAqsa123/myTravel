<% layout("/layout/boilerplate") %>
    <br><br>
    <div class="row mt-3">

        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title</label>
                    <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required>
                    <div class="valid-feedback">Titles looks good</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Enter Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control"
                        required></textarea>
                        <div class="invalid-feedback">Please enter a valid short description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Enter Image URL/Link</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                    
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Enter Price</label>
                        <input name="listing[price]" placeholder="enter price"  class="form-control"
                            required>
                            <div class="invalid-feedback">Enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Enter Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
                            required>
                            <div class="invalid-feedback">Enter a country name</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Enter Location</label>

                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control"
                        required>
                        <div class="invalid-feedback">Enter a location</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
            </form>

        </div>
    </div>

    <!-- name="listing[title]   listing aik object ban gaya jis men title description etc keys bn jaein gii -->

